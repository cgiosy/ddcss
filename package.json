{
	"name": "ddcss",
	"version": "0.6.0",
	"main": "dist/index.js",
	"types": "dist/src/index.d.ts",
	"type": "module",
	"files": [
		"dist/index.js",
		"dist/index.bundle.js",
		"dist/src/index.d.ts"
	],
	"dependencies": {
		"xxh32": "^1.4.0"
	},
	"devDependencies": {
		"@types/node": "^18.7.3",
		"@typescript-eslint/eslint-plugin": "^5.33.0",
		"@typescript-eslint/parser": "^5.33.0",
		"esbuild": "^0.15.2",
		"eslint": "^8.21.0",
		"npm-run-all": "^4.1.5",
		"typescript": "^4.7.4",
		"vitest": "^0.21.1"
	},
	"scripts": {
		"build": "run-p build:*",
		"build:types": "tsc --noEmit false --emitDeclarationOnly --declaration --outDir dist",
		"build:bundle": "esbuild src/index.ts --bundle --format=esm --target=es2019 --external:xxh32 --outfile=dist/index.js",
		"build:bundle-all": "esbuild src/index.ts --bundle --format=esm --target=es2019 --minify --outfile=dist/index.bundle.js",
		"test": "vitest",
		"coverage": "vitest run --coverage",
		"prepack": "run-s build"
	},
	"author": "cgiosy",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git://github.com/cgiosy/ddcss.git"
	},
	"publishConfig": {
		"access": "public"
	},
	"packageManager": "pnpm@7.0.0",
	"homepage": "https://github.com/cgiosy/ddcss",
	"keywords": [
		"css",
		"css-in-js",
		"js",
		"styled"
	]
}
